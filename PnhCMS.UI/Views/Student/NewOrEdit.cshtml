@model PnhCMS.Services.Student.ViewModel.StudentVM
@{ string curd = @ViewBag.PageUrl;}
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    @Html.Partial("_Breadcrumb")
 
        <div ng-app="myApp">

            <div class="row" ng-controller="student-controller" data-ng-init="onloadFun()">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="card-title">
                                        @ViewBag.ActionName
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div style="float:right">
                                        <a href="/Student/Index" title="Index" class="link-edit"><i class="fa fa-list"></i>List</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <form class="form-horizontal" name="studentForm" novalidate role="form">
                                <input class="form-control" readonly="readonly" id="StudentId" name="StudentId" value="@Model.StudentId"
                                       ng-model="StudentId" type="hidden" placeholder="Student id will generate automatically" />

                                <div class="form-group row">
                                    <label for="StudentName" class="col-md-3 col-form-label">Student Name</label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control" id="StudentName" name="StudentName" placeholder="Name" ng-model="StudentName" autofocus ng-required="true">
                                        @*<span class="help-block" style="color:red;" ng-if="studentForm.StudentName.$error.required && studentForm.StudentName.$dirty">Student name is required</span>*@

                                        <span class="help-block" style="color:red;" ng-show="studentForm.StudentName.$touched && studentForm.StudentName.$error.required">Student name is required.</span>

                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="BirthDate" class="col-md-3 col-form-label">Birth Date</label>
                                    <div class="col-md-9">
                                        <input type="text" id="BirthDate" name="BirthDate" class="form-control" placeholder="DD/MM/YYYY" ng-model="BirthDate" ng-required="true" readonly="readonly">
                                        @*<span class="help-block" style="color:red;" ng-if="studentForm.BirthDate.$error.required && studentForm.BirthDate.$dirty">birth date is required</span>*@

                                        <span class="help-block" style="color:red;" ng-show="studentForm.BirthDate.$touched && studentForm.BirthDate.$error.required">Birthdate is required.</span>

                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="RegistrationNo" class="col-md-3 col-form-label">Registration Number</label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control" id="RegistrationNo" name="RegistrationNo" placeholder="Registration Number" ng-model="RegistrationNo" ng-required="true">
                                        @*<span class="help-block" style="color:red;" ng-if="studentForm.RegistrationNo.$error.required && studentForm.RegistrationNo.$dirty">Registration no is required</span>*@

                                        <span class="help-block" style="color:red;" ng-show="studentForm.RegistrationNo.$touched && studentForm.RegistrationNo.$error.required">Registration is required.</span>

                                    </div>
                                </div>


                                <div class="form-group row">
                                    <div class="col-md-9 offset-md-3">
                                        <button type="button" class="btn btn-danger" ng-click="resetData()"><i class="fa fa-times"></i> CANCEL</button>

                                        @if (Model.StudentId > 0)
                                        {
                                            <button type="button" id="btnUpdate" class="btn btn-success" ng-click="update()" ng-disabled="studentForm.$invalid"><i class="fa fa-check-square-o"></i> Update</button>
                                        }
                                        else
                                        {
                                            <button type="button" id="btnSave" class="btn btn-success" ng-click="save()" ng-disabled="studentForm.$invalid"><i class="fa fa-check-square-o"></i> SAVE</button>
                                        }
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
     
</div>
@section scripts{
    <script src="~/Scripts/app/app.js"></script>
    <script src="~/Scripts/app/Services/StudentService.js"></script>
    <script src="~/Scripts/app/Controllers/StudentController.js"></script>
    <script>
        $('#BirthDate').datepicker({
            autoclose: true,
            todayHighlight: true,
            format: 'dd/mm/yyyy'
        });
    </script>
}


