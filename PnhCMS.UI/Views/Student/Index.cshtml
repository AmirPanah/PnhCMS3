@model List<PnhCMS.Services.Student.ViewModel.StudentVM>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div ng-app="myApp">

    <div class="row" ng-controller="student-controller" data-ng-init="getStudent()">
        <div class="container-fluid">
            @Html.Partial("_Breadcrumb")

            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="card-title">
                                @ViewBag.ActionName
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div style="float:right">
                                <a href="/Student/New" title="Add" class="link-edit"><i class="fa fa-Plus"></i>Add</a>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="card-body">

                    <div class="input-group mb-3">
                        <input type="text" ng-model="searchBy" ng-change="getStudentById(searchBy)" class="form-control" placeholder="Enter any keyword for searching...">
                        <div class="input-group-append">
                            <span class="input-group-text">Search</span>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">Id</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">DOB</th>
                                    <th scope="col">Registration Number</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>

                                <tr ng-repeat="Student in Students">
                                    <td>{{Student.StudentId}}</td>
                                    <td>{{Student.StudentName}}</td>
                                    <td>{{Student.BirthDate}}</td>
                                    <td>{{Student.RegistrationNo}}</td>
                                    <td>
                                        <a href="#" id="btnDelete" data-toggle="modal" data-target="#deleteDialog" title="Delete" class="link-delete" ng-click="delete(Student.StudentId)"><i class="fa fa-times"></i></a>
                                        <a href="/@ViewBag.PageUrl/edit/{{Student.StudentId}}" title="Edit" class="link-edit redirect-link"><i class="fa fa-edit"></i></a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section scripts{
    <script src="~/Scripts/app/app.js"></script>
    <script src="~/Scripts/app/Services/StudentService.js"></script>
    <script src="~/Scripts/app/Controllers/StudentController.js"></script>
}

