@model List<PnhCMS.Services.Grade.ViewModel.GradeVM>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div ng-app="myApp">

    <div class="row" ng-controller="grade-controller" data-ng-init="getGrade()">
        <div class="container-fluid">
            @Html.Partial("_Breadcrumb")

            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="card-title">
                                @ViewBag.ActionName
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div style="float:right">
                                <a href="/Grade/New" title="Add" class="link-edit"><i class="fa fa-Plus"></i>Add</a>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="card-body">

                    <div class="input-group mb-3">
                        <input type="text" ng-model="searchBy" ng-change="getGradeById(searchBy)" class="form-control" placeholder="Enter any keyword for searching...">
                        <div class="input-group-append">
                            <span class="input-group-text">Search</span>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">Id</th>
                                    <th scope="col">Grade Name</th>
                                    <th scope="col">Grade Point</th>
                                    <th scope="col">From</th>
                                    <th scope="col">To</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>

                                <tr ng-repeat="Grade in Grades">
                                    <td>{{Grade.GradeId}}</td>
                                    <td>{{Grade.GradeName}}</td>
                                    <td>{{Grade.GradePoint}}</td>
                                    <td>{{Grade.ScoreFrom}}</td>
                                    <td>{{Grade.ScoreTo}}</td>
                                    <td>
                                        <a href="#" id="btnDelete" data-toggle="modal" data-target="#deleteDialog" title="Delete" class="link-delete" ng-click="delete(Grade.GradeId)"><i class="fa fa-times"></i></a>
                                        <a href="/@ViewBag.PageUrl/edit/{{Grade.GradeId}}" title="Edit" class="link-edit redirect-link"><i class="fa fa-edit"></i></a>
                                    </td>
                                </tr>


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section scripts{
    <script src="~/Scripts/app/app.js"></script>
    <script src="~/Scripts/app/Services/GradeService.js"></script>
    <script src="~/Scripts/app/Controllers/GradeController.js"></script>
}